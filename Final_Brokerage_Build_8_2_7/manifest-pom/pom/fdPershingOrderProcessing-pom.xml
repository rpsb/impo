<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.fd.brokerage</groupId>
		<artifactId>fdBrokerage</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../fdBrokerage/pom.xml</relativePath>
	</parent>
	<artifactId>fdPershingOrderProcessing</artifactId>
	<name>FD Pershing Order Processing</name>
	<description>FD Pershing Order Processing</description>
	<version>${fdxlibraries.po.version}</version>

	<dependencies>
		<dependency>
			<groupId>com.fd.brokerage</groupId>
			<artifactId>fdUtil</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>axis</groupId>
			<artifactId>axis</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.santuario</groupId>
			<artifactId>xmlsec</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.2</version>
				</plugin>
				<!--<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>buildnumber-maven-plugin</artifactId>
					<version>1.4</version>
				</plugin>-->
			</plugins>
		</pluginManagement>
		<plugins>
			<!-- START SNIPPET: buildnumber -->
			<!--<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<doCheck>false</doCheck>
					<doUpdate>true</doUpdate>
				</configuration>
			</plugin>-->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>*.txt</exclude>
						<exclude>*.xml</exclude>
						<exclude>*.pdf</exclude>
						<exclude>*.properties</exclude>
						<exclude>*.wsdd</exclude>
						<exclude>*.xsd</exclude>
						<exclude>*.jks</exclude>
						<exclude>*.wsdl</exclude>
						<exclude>*.cer</exclude>
					</excludes>
					<archive>
						<manifestEntries>
							<SCM-Revision>${scm.revision}</SCM-Revision>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
